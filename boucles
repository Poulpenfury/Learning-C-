// MonpremierProgramme.cpp : Ce fichier contient la fonction 'main'. L'exécution du programme commence et se termine à cet endroit.
//

#include <iostream>
#include <stdio.h>
#include <stdlib.h>

// programme MACDO
int main()
{
	printf("===== MENU ===== \n" );
	printf("1. ROYAL CHEESE \n");
	printf("2. BIG MAC \n");
	printf("3. CHICKEN MAC\n");
	printf("4. VEGE SOUP\n");
	printf("Quel est votre choix ?\n");

	int choix;
	scanf_s("%d", &choix);


	switch (choix)
	{
	case 1:
		printf("You pick 1. ROYAL CHEESE");
		break;
	case 2:
		printf("You pick 2. BIG MAC");
		break;
	case 3:
		printf("You pick 3. CHICKEN MAC");
		break;
	case 4:
		printf("You really have terrible tastes !");
		break;

	default:
		printf("va te faire enculer!");
		break;
	}
	printf(" BON APPETIT !");
	return 0;
}

// Exécuter le programme : Ctrl+F5 ou menu Déboguer > Exécuter sans débogage
// Déboguer le programme : F5 ou menu Déboguer > Démarrer le débogage

